<h1>Create Assignment</h1>

<div class="row justify-content-center">
  <%= form_with model: @task  do |form|%>
     <div class="form-group">
      <%=form.label :Assignment%><br>
      <%= form.text_area :assignment, placeholder: 'Add Assignment'%>
    </div>
    <br>
    <div class="form-group">
        <%= form.label :User_id, 'Select User' %>
        <%= form.select :user_id, options_for_select(@users.map { |user| [user.email, user.id] }), {}, { prompt: 'Select User' } %>
    </div>
    <br>
    <div class="form-group">
          <%= form.submit "Create Assignment",  class: 'btn btn-primary'%>
        </div>
  <%end%>
</div>
